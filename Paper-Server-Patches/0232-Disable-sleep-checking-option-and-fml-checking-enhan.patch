+	private boolean progressMods(String currentMod) {
+		if (MigotConfig.strictMode) {
+			for (String disableMod : MigotConfig.disableMods) {
+				// Strict mode
+				if (currentMod.contains((String) disableMod)) {
+					PlayerConnection.LOGGER.warn(this.player.getName() + " was kicked for using disable mod: " + currentMod);
